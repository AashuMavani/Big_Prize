<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relTask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/big_bg_sidemenu_social">

            <RelativeLayout
                android:id="@+id/relTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_5"
                android:layout_marginTop="@dimen/dim_5"
                android:layout_marginEnd="@dimen/dim_5"
                android:layout_marginBottom="@dimen/dim_5">

<!--                <ImageView-->
<!--                    android:layout_width="@dimen/dim_25"-->
<!--                    android:layout_height="@dimen/dim_25"-->
<!--                    android:src="@drawable/ic_right"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:layout_marginRight="@dimen/dim_5"-->
<!--                    android:layout_alignParentEnd="true"/>-->

                <RelativeLayout
                    android:id="@+id/layoutIcon"
                    android:layout_width="@dimen/dim_40"
                    android:layout_height="@dimen/dim_40"
                    android:gravity="center">

                    <ProgressBar
                        android:id="@+id/probr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:theme="@style/Progressbar.Green" />

                    <ImageView
                        android:id="@+id/ivIcon"
                        android:layout_width="@dimen/dim_30"
                        android:layout_height="@dimen/dim_30"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/ivLottie"
                        android:layout_width="20dp"
                        android:layout_height="29dp"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:visibility="invisible"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dim_8"
                    android:layout_marginRight="@dimen/dim_8"
                    android:layout_toLeftOf="@id/ivArrow"
                    android:layout_toRightOf="@id/layoutIcon"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/big_rubik_medium"
                        android:includeFontPadding="false"
                        android:text="@string/app_name"
                        android:textColor="@color/grey_blue_black_font"
                        android:textSize="@dimen/textSize_13" />

                    <TextView
                        android:id="@+id/txtLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_8"
                        android:background="@drawable/big_bg_label"
                        android:fontFamily="@font/big_rubik_medium"
                        android:includeFontPadding="false"
                        android:paddingLeft="@dimen/dim_5"
                        android:paddingTop="@dimen/dim_1"
                        android:paddingRight="@dimen/dim_5"
                        android:paddingBottom="@dimen/dim_1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_10" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/big_ic_down_arrow"
                    app:tint="@color/light_grey_font" />
            </RelativeLayout>
        </RelativeLayout>
</LinearLayout>