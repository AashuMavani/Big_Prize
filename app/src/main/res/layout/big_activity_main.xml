<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        tools:context=".activity.HomeActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@drawable/big_toolbar_bg"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivMenu"
                    android:layout_width="@dimen/dim_32"
                    android:layout_height="@dimen/dim_32"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dim_10"
                    android:padding="@dimen/dim_5"
                    android:src="@drawable/big_ic_side_icon"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/big_rubik_bold"
                    android:gravity="left"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dim_5"
                    android:text="Home"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_18"
                    tools:ignore="MissingPrefix" />

                <LinearLayout
                    android:id="@+id/layoutPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dim_5"
                    android:layout_marginRight="@dimen/dim_5"
                    android:background="@drawable/big_bg_wallet_balance"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingTop="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_8"
                    android:paddingBottom="@dimen/dim_5">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="@dimen/dim_20"
                        android:layout_height="@dimen/dim_20"
                        android:layout_gravity="center_vertical"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/big_coin" />

                    <TextView
                        android:id="@+id/tvPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:fontFamily="@font/big_rubik_bold"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/dim_5"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dim_5"
                        android:text="100"
                        android:textColor="@color/black_font"
                        android:textSize="@dimen/textSize_16"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/ivScanAndPay"
                    android:layout_width="@dimen/dim_34"
                    app:lottie_loop="true"
                    android:padding="@dimen/dim_3"
                    android:visibility="gone"
                    android:layout_height="@dimen/dim_34"
                    android:layout_marginRight="@dimen/dim_5"
                    android:layout_gravity="center_vertical"
                    app:lottie_rawRes="@raw/big_scan_and_pay" />


<!--                <ImageView-->
<!--                    android:id="@+id/ivStories"-->
<!--                    android:layout_width="@dimen/dim_32"-->
<!--                    android:layout_height="34dp"-->
<!--                    android:layout_gravity="center_vertical"-->
<!--                    android:layout_marginRight="@dimen/dim_5"-->
<!--                    android:padding="@dimen/dim_1"-->
<!--                    android:src="@drawable/big_ic_instagram_story" />-->

                <ImageView
                    android:id="@+id/ivAdjoeLeaderboard"
                    android:layout_width="@dimen/dim_30"
                    android:layout_height="@dimen/dim_30"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dim_2"
                    android:src="@drawable/big_ic_leaderboard"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivAdjoe"
                    android:layout_width="@dimen/dim_30"
                    android:layout_height="@dimen/dim_30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dim_5"
                    android:padding="@dimen/dim_1"
                    android:src="@drawable/big_ic_game_fill"
                    android:visibility="gone"
                    app:tint="@color/white" />

<!--                <com.airbnb.lottie.LottieAnimationView-->
<!--                    android:id="@+id/lottieAdjoe"-->
<!--                    android:layout_width="@dimen/dim_30"-->
<!--                    android:layout_height="@dimen/dim_30"-->
<!--                    android:layout_gravity="center_vertical"-->
<!--                    android:layout_marginRight="@dimen/dim_5"-->
<!--                    android:visibility="gone"-->
<!--                    app:lottie_autoPlay="true"-->
<!--                    app:lottie_loop="true" />-->
                <LinearLayout
                    android:id="@+id/layoutHotOffers"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_32"
                    android:background="@drawable/big_bg_home_tool_adjoy"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dim_3"
                    android:visibility="visible">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/big_home_fire" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_2"
                        android:layout_marginRight="@dimen/dim_5"
                        android:fontFamily="@font/big_rubik_bold"
                        android:includeFontPadding="false"
                        android:text="Play a\nGame"
                        android:textColor="@color/black_font"
                        android:textSize="@dimen/textSize_8" />
                </LinearLayout>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layoutBottomNavigation"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="-1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutWithdrawBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_15"
                    android:layout_marginTop="@dimen/dim_10"
                    android:layout_marginRight="@dimen/dim_15"
                    android:layout_marginBottom="@dimen/dim_10"
                    android:background="@drawable/big_bg_withdraw_wallet"
                    android:elevation="@dimen/dim_2"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dim_10"
                    android:paddingRight="@dimen/dim_10">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dim_15">

                            <TextView
                                android:id="@+id/tvNextPayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:includeFontPadding="false"
                                android:text="Next payout for Rs. 0"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSize_16"
                                app:fontFamily="@font/big_rubik_bold" />

                            <TextView
                                android:id="@+id/tvWithdrawProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dim_10"
                                android:includeFontPadding="false"
                                android:letterSpacing="0.01"
                                android:text="1000/10000"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSize_16"
                                app:fontFamily="@font/big_rubik_medium" />

                            <ImageView
                                android:layout_width="@dimen/dim_16"
                                android:layout_height="@dimen/dim_16"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dim_8"
                                android:src="@drawable/big_coin1" />
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/dim_5"
                            android:layout_marginBottom="@dimen/dim_5"
                            android:elevation="0dp"
                            android:orientation="vertical"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <LinearLayout
                                android:id="@+id/linearProgress"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/big_progress_bar_wallet_backgound" >

                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/progressBarWithdraw"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:scaleType="centerCrop"
                                    android:visibility="visible"
                                    app:lottie_autoPlay="false"
                                    app:lottie_loop="true"
                                    app:lottie_rawRes="@raw/big_progress" />

                    </LinearLayout>

                        </androidx.cardview.widget.CardView>

<!--                        <ProgressBar-->
<!--                            android:id="@+id/progressBarWithdraw"-->
<!--                            style="?android:attr/progressBarStyleHorizontal"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="@dimen/dim_15"-->
<!--                            android:layout_gravity="center_vertical"-->
<!--                            android:layout_marginTop="@dimen/dim_6"-->
<!--                            android:layout_marginBottom="@dimen/dim_12"-->
<!--                            android:layout_weight="1"-->
<!--                            android:indeterminate="false"-->
<!--                            android:minHeight="@dimen/dim_10"-->
<!--                            android:progress="50"-->
<!--                            android:progressDrawable="@drawable/progress_bar_wallet_backgound" />-->

                        <LinearLayout
                            android:id="@+id/home_withRel"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dim_10"
                            android:gravity="center"
                            android:layout_marginBottom="@dimen/dim_10"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <RelativeLayout
                                android:id="@+id/withdraw_box"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dim_15"
                                android:layout_weight="1">

                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/lottie_withdraw"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:adjustViewBounds="true"
                                    android:visibility="visible"
                                    app:lottie_autoPlay="true"
                                    app:lottie_loop="true" />

                            </RelativeLayout>

<!--                            <View-->
<!--                                android:layout_width="0dp"-->
<!--                                android:layout_height="@dimen/dim_5"-->
<!--                                android:layout_weight="1" />-->

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnWithdraw"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/big_selector_btn"
                                android:fontFamily="@font/big_rubik_bold"
                                android:foreground="?attr/selectableItemBackground"
                                android:includeFontPadding="false"
                                android:paddingLeft="@dimen/dim_20"
                                android:paddingRight="@dimen/dim_20"
                                android:text="Withdraw"
                                android:textAllCaps="false"
                                android:textColor="@color/big_selector_button"
                                android:textSize="@dimen/textSize_16" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutGiveawayCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_15"
                    android:layout_marginRight="@dimen/dim_15"
                    android:layout_marginVertical="@dimen/dim_5"
                    android:background="@drawable/big_giveaway_bg"
                    android:elevation="@dimen/dim_2"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dim_15"
                    android:paddingRight="@dimen/dim_8"
                    android:paddingTop="@dimen/dim_5"
                    android:paddingBottom="@dimen/dim_10">

                    <ImageView
                        android:layout_width="@dimen/dim_32"
                        android:layout_height="@dimen/dim_32"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/dim_15"
                        android:padding="@dimen/dim_2"
                        android:src="@drawable/big_ic_coupon_code" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblGiveawayCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="Have a Giveaway Code?"
                            android:textAllCaps="false"
                            android:textColor="@color/black_font"
                            android:textSize="@dimen/textSize_16"
                            app:fontFamily="@font/big_rubik_medium" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvGiveawayCodes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dim_8"
                            android:orientation="horizontal"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dim_24"
                        android:layout_height="@dimen/dim_24"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/big_ic_right"
                        app:tint="@color/colorPrimary" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layoutSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_10"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.app.bigprize.Customviews.Big_Recyclerview.Big_Recycler_ViewPager
                        android:id="@+id/rvSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:svp_colorActiveIndicator="@color/colorAccent"
                        app:svp_colorInactiveIndicator="@color/light_grey_font"
                        app:svp_runAuto="true"
                        app:svp_timeMillis="5000" />

                </RelativeLayout>

                <WebView
                    android:id="@+id/webNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:layout_marginBottom="@dimen/dim_3"
                    android:visibility="gone"
                    tools:ignore="WebViewLayout" />

                <LinearLayout
                    android:id="@+id/layoutInflate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dim_10"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivFooterImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dim_15"
                    android:layout_marginRight="@dimen/dim_15"
                    android:layout_marginBottom="@dimen/dim_15"
                    android:adjustViewBounds="true"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>



        <LinearLayout
            android:id="@+id/layoutBottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/big_bottom_navigation_menu_background"
            android:elevation="@dimen/dim_2"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layoutHome"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_60"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/big_home_l"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/lblHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dim_2"
                    android:fontFamily="@font/big_rubik_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Home"
                    android:textColor="@color/big_selector_menu_text_color"
                    android:textSize="@dimen/textSize_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutReward"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_60"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/dim_56"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivReward"
                        android:layout_width="@dimen/dim_25"
                        android:layout_height="@dimen/dim_25"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dim_8"
                        android:src="@drawable/big_reward_ic" />

                    <TextView
                        android:id="@+id/tvRewardPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dim_2"
                        android:background="@drawable/big_bg_label_earn"
                        android:elevation="@dimen/dim_1"
                        android:fontFamily="@font/big_rubik_bold"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:minWidth="@dimen/dim_15"
                        android:paddingLeft="@dimen/dim_5"
                        android:paddingTop="@dimen/dim_2"
                        android:paddingRight="@dimen/dim_5"
                        android:paddingBottom="@dimen/dim_2"
                        android:text="₹10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_10" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/lblReward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dim_2"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:fontFamily="@font/big_rubik_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Reward"
                    android:textColor="@color/big_selector_menu_text_color"
                    android:textSize="@dimen/textSize_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTasks"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/task_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dim_10"
                    android:src="@drawable/big_task_l"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/lblTasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/big_rubik_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Tasks"
                    android:textColor="@color/big_selector_menu_text_color"
                    android:textSize="@dimen/textSize_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutInvite"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_60"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivInvite"
                    android:layout_width="@dimen/dim_24"
                    android:layout_height="@dimen/dim_24"
                    android:layout_gravity="center"
                    android:src="@drawable/big_refer_ic" />

                <TextView
                    android:id="@+id/lblInvite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dim_3"
                    android:fontFamily="@font/big_rubik_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Refer"
                    android:textColor="@color/big_selector_menu_text_color"
                    android:textSize="@dimen/textSize_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutGames"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_60"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivGames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/big_profile_ic" />

                <TextView
                    android:id="@+id/lblGames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dim_3"
                    android:fontFamily="@font/big_rubik_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Profile"
                    android:textColor="@color/big_selector_menu_text_color"
                    android:textSize="@dimen/textSize_12" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutTasks1"
            android:layout_width="@dimen/dim_56"
            android:layout_height="@dimen/dim_56"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dim_30"
            android:background="@drawable/big_task_circule_image"
            android:elevation="@dimen/dim_2">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieViewTask"
                android:layout_width="@dimen/dim_56"
                android:layout_height="@dimen/dim_56"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="@dimen/dim_8"
                app:lottie_autoPlay="false"
                app:lottie_loop="true" />


            <ImageView
                android:id="@+id/ivTasks"
                android:layout_width="@dimen/dim_56"
                android:layout_height="@dimen/dim_56"
                android:layout_gravity="center"
                android:padding="@dimen/dim_10"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fadeScrollbars="false"
                android:fillViewport="true"
                android:scrollIndicators="none"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layoutUserProfile"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:background="@drawable/big_bg"
                            android:elevation="@dimen/dim_2"
                            android:orientation="horizontal"
                            android:padding="@dimen/dim_15">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ivProfilePic"
                                android:layout_width="@dimen/dim_70"
                                android:layout_height="@dimen/dim_70"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/big_ic_me"
                                app:civ_border_color="@color/yellow"
                                app:civ_border_width="@dimen/dim_2"
                                app:civ_circle_background_color="#FCC212" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dim_15"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="left"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textSize_20"
                                    app:fontFamily="@font/big_rubik_bold" />

                                <TextView
                                    android:id="@+id/tvEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dim_5"
                                    android:ellipsize="end"
                                    android:gravity="left"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textSize_12"
                                    app:fontFamily="@font/big_rubik_regular" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_0_5"
                        android:background="@drawable/big_line" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMenuList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginVertical="@dimen/_3sdp" />

                    <ImageView
                        android:id="@+id/menuAdBanner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/dim_2"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_1"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:background="@drawable/big_line" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dim_20">

                        <LinearLayout
                            android:id="@+id/layoutTelegram"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dim_80"
                            android:layout_marginLeft="@dimen/dim_10"
                            android:layout_marginRight="@dimen/dim_5"
                            android:layout_marginBottom="@dimen/dim_5"
                            android:layout_weight="1"
                            android:elevation="@dimen/dim_2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dim_40"
                                android:layout_height="@dimen/dim_40"
                                android:layout_gravity="center"
                                android:src="@drawable/big_ic_telegram" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/dim_5"
                                android:fontFamily="@font/big_rubik_bold"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:paddingLeft="@dimen/dim_5"
                                android:paddingRight="@dimen/dim_5"
                                android:text="Telegram"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSize_12" />
                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/layoutYoutube"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dim_80"
                            android:layout_marginLeft="@dimen/dim_5"
                            android:layout_marginRight="@dimen/dim_5"
                            android:layout_marginBottom="@dimen/dim_5"
                            android:layout_weight="1"
                            android:elevation="@dimen/dim_2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dim_40"
                                android:layout_height="@dimen/dim_40"
                                android:layout_gravity="center"
                                android:src="@drawable/big_ic_youtube" />

                            <TextView
                                android:id="@+id/tvAddAccount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dim_5"
                                android:fontFamily="@font/big_rubik_bold"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:paddingLeft="@dimen/dim_5"
                                android:paddingRight="@dimen/dim_5"
                                android:text="YouTube"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSize_12" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/layoutInstagram"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dim_80"
                            android:layout_marginLeft="@dimen/dim_5"
                            android:layout_marginRight="@dimen/dim_10"
                            android:layout_marginBottom="@dimen/dim_5"
                            android:layout_weight="1"
                            android:elevation="@dimen/dim_2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dim_40"
                                android:layout_height="@dimen/dim_40"
                                android:layout_gravity="center"
                                android:src="@drawable/big_ic_instagram" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/dim_5"
                                android:fontFamily="@font/big_rubik_bold"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:paddingLeft="@dimen/dim_5"
                                android:paddingRight="@dimen/dim_5"
                                android:text="Instagram"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSize_12" />
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dim_50">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/big_rubik_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:padding="@dimen/dim_3"
                            android:text="@string/app_name"
                            android:textColor="@color/light_grey_font"
                            android:textSize="@dimen/textSize_22" />

                        <TextView
                            android:id="@+id/tvVersionName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/big_rubik_medium"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:padding="@dimen/dim_3"
                            android:text=""
                            android:textColor="@color/black_font"
                            android:textSize="@dimen/textSize_12" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/dim_10"
                            android:fontFamily="@font/big_rubik_medium"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:padding="@dimen/dim_3"
                            android:text="Made with ❤ in India"
                            android:textColor="@color/black_font"
                            android:textSize="@dimen/textSize_12" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>