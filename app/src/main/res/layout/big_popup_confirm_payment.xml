<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginRight="@dimen/dim_20"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_10"
        app:cardElevation="@dimen/dim_3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/big_rubik_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:minHeight="@dimen/dim_50"
                android:padding="@dimen/dim_15"
                android:text="Confirm Payment"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0_5"
                    android:background="@color/border_grey" />

                <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="@dimen/dim_50"
                    android:layout_height="@dimen/dim_50"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dim_15"
                    android:src="@drawable/big_ic_wallet" />

                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_15"
                    android:fontFamily="@font/big_rubik_regular"
                    android:gravity="center"
                    android:background="@drawable/big_bg_dashed_background"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/dim_1"
                    android:lineSpacingMultiplier="1.1"
                    android:text=""
                    android:padding="@dimen/dim_12"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_15"
                    android:layout_marginRight="@dimen/dim_15"
                    android:layout_marginBottom="@dimen/dim_15"
                    android:fontFamily="@font/big_rubik_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/dim_1"
                    android:lineSpacingMultiplier="1.1"
                    android:text="Are you sure you want make this payment?"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_16" />

                <View
                    android:id="@+id/viewSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0_5"
                    android:background="@color/border_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnNo"
                        android:layout_width="@dimen/dim_120"
                        android:layout_height="@dimen/dim_40"
                        android:layout_marginLeft="@dimen/dim_20"
                        android:layout_marginTop="@dimen/dim_15"
                        android:layout_marginBottom="@dimen/dim_15"
                        android:background="@null"
                        android:fontFamily="@font/big_rubik_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="No"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/textSize_14" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnYes"
                        android:layout_width="@dimen/dim_120"
                        android:layout_height="@dimen/dim_40"
                        android:layout_marginTop="@dimen/dim_15"
                        android:layout_marginRight="@dimen/dim_20"
                        android:layout_marginBottom="@dimen/dim_15"
                        android:background="@drawable/big_selector_btn"
                        android:fontFamily="@font/big_rubik_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Yes"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_15" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>