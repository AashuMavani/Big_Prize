<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layoutFullImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_2"
        android:layout_marginBottom="@dimen/dim_3"
        android:background="@color/white"
        android:elevation="@dimen/dim_2"
        android:minHeight="@dimen/dim_100"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBarFullImage"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerInParent="true"
            android:theme="@style/Progressbar.Green" />

        <ImageView
            android:id="@+id/ivFullImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:visibility="visible" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivLottieFullImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_2"
        android:layout_marginBottom="@dimen/dim_3"
        android:background="@color/white"
        android:elevation="@dimen/dim_2"
        android:paddingBottom="@dimen/dim_15"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_7sdp"
            android:background="@color/grey_button" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dim_15">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dim_15"
                    android:paddingRight="@dimen/dim_15">

                    <RelativeLayout
                        android:id="@+id/layoutIcon"
                        android:layout_width="@dimen/dim_54"
                        android:layout_height="@dimen/dim_54"
                        android:gravity="center">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="@dimen/dim_25"
                            android:layout_height="@dimen/dim_25"
                            android:layout_centerInParent="true"
                            android:theme="@style/Progressbar.Green" />


                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/ivIcon"
                            app:riv_corner_radius="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:elevation="@dimen/dim_2"
                            android:scaleType="fitXY" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/ivLottie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:visibility="invisible"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dim_15"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ellipsize="end"
                            android:fontFamily="@font/big_rubik_bold"
                            android:gravity="left"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:text="sdfsdf"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_16" />

                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/dim_5"
                            android:ellipsize="end"
                            android:fontFamily="@font/big_rubik_regular"
                            android:includeFontPadding="false"
                            android:maxLines="2"
                            android:text="sdfsd skf skdf skfh skfh sdjkf sdjkfhsdjkfsdksdkfh skdsdkfh"
                            android:textColor="#E90C0C0C"
                            android:textSize="@dimen/textSize_12"
                            android:visibility="visible" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layoutPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dim_15"
                        android:background="@drawable/big_border_accent_rectangle"
                        android:elevation="@dimen/dim_2"
                        android:gravity="center"
                        android:minWidth="@dimen/dim_45"
                        android:minHeight="@dimen/dim_34"
                        android:paddingLeft="@dimen/dim_10"
                        android:paddingRight="@dimen/dim_10">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="@dimen/dim_20"
                            android:layout_height="@dimen/dim_20"
                            android:layout_gravity="center_vertical"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/big_coin" />

                        <TextView
                            android:id="@+id/tvPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ellipsize="end"
                            android:fontFamily="@font/big_rubik_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:text="100"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_16"
                            tools:ignore="MissingPrefix" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/layoutTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_80"
                    android:layout_marginTop="@dimen/dim_10"
                    android:visibility="gone"
                    app:alignContent="flex_end"
                    app:alignItems="flex_end"
                    app:flexWrap="wrap" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutReferTaskPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@drawable/big_bg_task_tagd"
            android:backgroundTint="@color/grey_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dim_15"
            android:paddingTop="@dimen/dim_5"
            android:paddingRight="@dimen/dim_15"
            android:paddingBottom="@dimen/dim_5">

            <ImageView
                android:layout_width="@dimen/dim_20"
                android:layout_height="@dimen/dim_20"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:background="@drawable/big_bg_sidemenu_social"
                android:padding="@dimen/dim_2"
                android:src="@drawable/big_ic_share_new" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dim_8"
                android:fontFamily="@font/big_rubik_medium"
                android:includeFontPadding="false"
                android:text="Get"
                android:textColor="@color/black_font"
                android:textSize="@dimen/textSize_15"
                android:visibility="visible" />

            <ImageView
                android:layout_width="@dimen/dim_16"
                android:layout_height="@dimen/dim_16"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dim_8"
                android:adjustViewBounds="true"
                android:src="@drawable/big_coin1" />

            <TextView
                android:id="@+id/tvReferTaskPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dim_8"
                android:fontFamily="@font/big_rubik_medium"
                android:includeFontPadding="false"
                android:text="1000 / Task Referral"
                android:textColor="@color/black_font"
                android:textSize="@dimen/textSize_15"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_adplaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_15"
        android:layout_marginTop="@dimen/dim_2"
        android:layout_marginRight="@dimen/dim_15"
        android:layout_marginBottom="@dimen/dim_3"
        android:elevation="@dimen/dim_2"
        android:visibility="gone" />
</LinearLayout>