<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relSlider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_15"
        android:layout_marginTop="@dimen/dim_10"
        android:layout_marginRight="@dimen/dim_12"
        android:layout_marginBottom="@dimen/dim_8"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/dim_10"
        app:cardElevation="@dimen/dim_2">

        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitleHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dim_10"
                android:layout_marginLeft="@dimen/_13sdp"
                android:fontFamily="@font/big_rubik_bold"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingLeft="@dimen/_13sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_16"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>